<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="PersonnageDuCinema" table="PERSONNAGEDUCINEMA">
        <id name="idPersonneDuCinema" type="int">
            <column name="IDPERSONNAGEDUCINEMA" />
            <generator class="assigned" />
        </id>
        <property name="nomComplet" type="java.lang.String">
            <column name="NOMCOMPLET" />
        </property>
        <property name="dateAnniversaire" type="java.util.Date">
            <column name="DATEANNIVERSAIRE" />
        </property>
        <property name="lieuNaissance" type="java.lang.String">
            <column name="LIEUNAISSANCE" />
        </property>
        <property name="biographie" type="java.lang.String">
            <column name="BIOGRAPHIE" />
        </property>
        <property name="lienPhoto" type="java.lang.String">
            <column name="LIENPHOTO" />
        </property>

               
	    <joined-subclass name="Acteur" table="ACTEUR">
	        <key column="IDACTEUR"/>
	    </joined-subclass>	    

	    <joined-subclass name="Realisateur" table="REALISATEUR">
	        <key column="IDREALISATEUR"/>
	    </joined-subclass>	 

    </class>
</hibernate-mapping>
